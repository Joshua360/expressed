extends layout.pug
block content
    section.namecard
        .namecard-hello
            p.namecard-greeting Welcome, #{name}!
            |             
            form.namecard-exit(action='/goodbye', method='POST')
                button(type='submit')
                    img(src='../static/img/close.svg')
        |     
        section.flashcards
        .card.card-question
            .card-header
            |             
            h1.card-title Question
            |             
            #content
            h2= text
            |
            if hint                 
                p#hint
                    i Hint:#{hint}
            |
            br 
            br
            br            
            .card-flip-wrap
                a(href=`${id}?side=${sideToShow}`)
                    img.card-flip(src='../static/img/flip.svg')
            |             
            .card-next
                a(href='/cards')
                    img(src='../static/img/next.svg')
        script(src='app.js')
